                <arg>-XsimpleEquals</arg>
                <arg>-XsimpleHashCode</arg>
                <arg>-Xinheritance</arg>
                <arg>-Xannotate</arg>
                <arg>-Xparent-pointer</arg>
                <arg>-Xfluent-api</arg>
              </args>
              <plugins>
                <plugin>
                  <groupId>org.jvnet.jaxb</groupId>
                  <artifactId>jaxb-plugins</artifactId>
                  <version>${jaxb-tools.version}</version>
                </plugin>
