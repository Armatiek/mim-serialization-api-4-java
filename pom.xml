                <arg>-XsimpleHashCode</arg>
                <arg>-Xinheritance</arg>
                <arg>-Xannotate</arg>
                <arg>-Xparent-pointer</arg>
                <arg>-Xfluent-api</arg>
              </args>
              <plugins>
                <plugin>
                  <groupId>org.jvnet.jaxb</groupId>
                  <artifactId>jaxb-plugins</artifactId>
                  <version>${jaxb-tools.version}</version>
                </plugin>
                <plugin>
                  <groupId>org.jvnet.jaxb</groupId>
                  <artifactId>jaxb-plugin-annotate</artifactId>
                  <version>${jaxb-tools.version}</version>
                </plugin>
              </plugins>
            </configuration>
          </execution>
          <execution>
            <id>generate-mim-1-1-0-relatiesoort</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <schemaDirectory>${basedir}/src/main/resources/xsd/1.1.0</schemaDirectory>
              <schemaIncludes>
                <include>MIMFORMAT_Mim_relatiesoort.xsd</include>
              </schemaIncludes>
              <bindingDirectory>${basedir}/src/main/resources/bindings/1.1.0/relatiesoort</bindingDirectory>
              <bindingIncludes>
